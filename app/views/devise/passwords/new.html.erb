<div class="passwordBox animated fadeInDown">
  <div class="row">
    <div class="col-md-12">
      <div class="ibox-content">
        <h2 class="font-bold">Forgot password</h2>
          <p>
              Enter your email address and your password will be reset and emailed to you.
          </p>
          <div class="row">
            <div class="col-lg-12">
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "m-t" } ) do |f| %>
                <div class="devise-errors">
                  <%= devise_error_messages! %>
                </div>

                <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address" %>
                </div>

                <div class="actions">
                  <%= f.submit "Send new password", class: "btn btn-primary block full-width m-b" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>

